<div class="columns is-multiline box">
  <div class="column is-12 is-gapless">
    <p class="title">
      {{country.name}}
    </p>
    <p class="subtitle">
      {{country.description}}
    </p>
  </div>
  <div class="column is-6">
    <div id="recipe" class="box">
      <div class="columns">
        <div class="column is-12">
          <h2 class="subtitle is-size-2">Recommended Dish:
            {{country.dishName}}</h2>
        </div>
      </div>
      <div class="columns is-centered">
        <div class="column is-narrow is-4">
          <img
            src="{{recipe.content.details.images.0.hostedLargeUrl}}"
            style="width: 100%;"
          />
          Time:
          {{recipe.content.details.totalTime}}
          <a
            class="button is-link is-outlined"
            href="{{recipe.content.details.directionsUrl}}"
          >
            Directions
          </a>
        </div>
        <div class="column">
          <h3 class="subtitle is-size-3">
            Ingredients
          </h3>
          <ul>
            {{#each recipe.content.ingredientLines}}
              <li>
                {{this.wholeLine}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    {{#if playlist}}
      <div id="playlist">
        <h2 class="subtitle is-size-2">
          Spotify Playlist:
          {{playlist.name}}
        </h2>
        <a href="https://open.spotify.com/playlist/{{country.playlistId}}">
          Open playlist
        </a>
        <iframe
          src="https://open.spotify.com/embed/playlist/{{country.playlistId}}"
          width="100%"
          height="80"
          frameborder="0"
          allowtransparency="true"
          allow="encrypted-media"
        ></iframe>
      </div>
    {{/if}}
  </div>
  <div class="column is-6">
    <div id="image">
      <img src="{{country.imageUrl}}" />
    </div>
    {{#if drink}}
      <div id="drink" class="box">
        <div class="columns">
          <div class="column is-12">
            <h2 class="subtitle is-size-2">Drink Pairing:
              {{country.drinkName}}</h2>
          </div>
        </div>
        <div class="columns">
          <div class="column is-12">
            Time:
            {{drink.content.details.totalTime}}
          </div>
        </div>
        <div class="columns is-centered">
          <div class="column is-narrow box">
            <img
              src="{{drink.content.details.images.0.hostedLargeUrl}}"
              style="width: 100%;"
            />
          </div>
        </div>
        <div class="field is-grouped">
          <p class="control">
            <a
              class="button is-link is-outlined"
              href="{{drink.content.details.directionsUrl}}"
            >
              Directions
            </a>
          </p>
        </div>
      </div>
    {{/if}}
  </div>
</div>
<div class="columns is-multiline">
  <div class="column is-narrow">
    Created by
    {{country.created_by.username}}
  </div>
  <div class="column is-narrow">
    Updated by
    {{country.updated_by.username}}
  </div>
  <div class="column is-12">
    <a class="button is-success" href="/countries/{{country._id}}/edit">Edit
      this country</a>
    <a class="button is-danger" href="/countries/{{country._id}}/delete">Delete
      this country</a>
  </div>
</div>