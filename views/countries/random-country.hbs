<div class="columns is-multiline">
  <div class="column is-12">
    <h1 class="title is-size-1">{{country.name}}</h1>
  </div>
  <div class="column is-6">
    <p>
      {{country.description}}
    </p>

    <p>
      <h2 class="subtitle is-size-2">
        Spotify Playlist: {{playlist.name}}
      </h2>
      <a href="https://open.spotify.com/playlist/{{country.playlistId}}">
        Open playlist
      </a>
      <iframe
        src="https://open.spotify.com/embed/playlist/{{country.playlistId}}"
        width="100%"
        height="400"
        frameborder="0"
        allowtransparency="true"
        allow="encrypted-media"
      ></iframe>
    </p>
    <p>
      <img src="{{country.imageUrl}}" />
    </p>
  </div>
  <div class="column is-6">

    <p>
      <a href="{{country.recipeUrl}}">
        Open recipe
      </a>

    </p>
    <p>
      <iframe
        src="https://www.allrecipes.com/recipe/263384/spicy-shrimp-pad-thai/
        width="100%"
        height="1000"
        frameborder="0"
        allowtransparency="true"
        allow="encrypted-media"
      ></iframe>
    </p>
  </div>
</div>

<a href="/countries/{{country._id}}/edit">Edit this country</a>
<a href="/countries/{{country._id}}/delete">Delete this country</a>