<section class="hero is-small is-info">
  <div class="hero-body">
    <h1 class="title is-size-1">This is your private profile page,
      {{user.username}}
    </h1>

    <figure class="image">
      <img src="https://www.placecage.com/250/250" style="max-height: 40vh; object-fit: contain;" />
    </figure>

    {{#if editedCountries}}
    <div class="block">
      <h3 class="subtitle is-size-3">Edited Countries</h3>
      {{#each editedCountries}}
      <div class="block">
        <a href="/countries/{{_id}}" class="button is-primary is-large is-fullwidth">
          {{name}}
        </a>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <div class="field is-grouped block">
      <p class="control">
        <a class="button is-success" href="/countries/create">Add a new country</a>
      </p>
      <p class="control">
        <a class="button is-danger" href="/auth/logout">Logout</a>
      </p>
    </div>
  </div>
</section>